<?xml version="1.0" encoding="utf-8"?>
<com.elsdoerfer.android.autostarts.compat.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/bg_newinstall_receiver"
     >
     <!-- android:orientation="vertical" -->

    <ImageView
        android:id="@+id/receiver_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_help" />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:includeFontPadding="false"
        android:gravity="top"
        android:paddingLeft="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/receiver_icon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_alignLeft="@id/label" />
    
    <android.widget.Switch
        android:id="@+id/checkable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/actions"
        android:layout_alignBottom="@id/actions"
        android:layout_alignParentRight="true"
        android:focusable="false" />
    
</com.elsdoerfer.android.autostarts.compat.CheckableRelativeLayout>
